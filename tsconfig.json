{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "outDir": "./dist/esm",
    "lib": ["DOM.Iterable", "DOM", "ES2017"],
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "types": ["node", "react"],
    "paths": {
      "@utilityjs/use-get-latest": ["./src/hook/useGetLatest"],
      "@utilityjs/use-get-latest/*": ["./src/hook/useGetLatest/*"],
      "@utilityjs/use-previous-value": ["./src/hook/usePreviousValue"],
      "@utilityjs/use-previous-value/*": ["./src/hook/usePreviousValue/*"],
      "@utilityjs/use-event-listener": ["./src/hook/useEventListener"],
      "@utilityjs/use-event-listener/*": ["./src/hook/useEventListener/*"],
      "@utilityjs/use-get-scrollbar-width": [
        "./src/hook/useGetScrollbarWidth/"
      ],
      "@utilityjs/use-get-scrollbar-width*": [
        "./src/hook/useGetScrollbarWidth/*"
      ],
      "@utilityjs/use-register-node-ref": ["./src/hook/useRegisterNodeRef/"],
      "@utilityjs/use-register-node-ref*": ["./src/hook/useRegisterNodeRef/*"],
      "@utilityjs/use-persisted-state": ["./src/hook/usePersistedState/"],
      "@utilityjs/use-persisted-state*": ["./src/hook/usePersistedState/*"],
      "@utilityjs/use-media-query": ["./src/hook/useMediaQuery/"],
      "@utilityjs/use-media-query*": ["./src/hook/useMediaQuery/*"],
      "@utilityjs/comparator": ["./src/data-structure/Comparator"],
      "@utilityjs/comparator/*": ["./src/data-structure/Comparator/*"],
      "@utilityjs/linked-list": ["./src/data-structure/LinkedList"],
      "@utilityjs/linked-list/*": ["./src/data-structure/LinkedList/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
