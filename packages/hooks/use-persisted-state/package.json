{
  "name": "@utilityjs/use-persisted-state",
  "version": "1.1.3",
  "description": "A React hook that provides a SSR-friendly multi-tab persistent state.",
  "license": "MIT",
  "homepage": "https://github.com/mimshins/utilityjs/tree/main/packages/hooks/use-persisted-state",
  "repository": {
    "type": "git",
    "url": "git@github.com:mimshins/utilityjs.git",
    "directory": "packages/hooks/use-persisted-state"
  },
  "bugs": {
    "url": "https://github.com/mimshins/utilityjs/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "javascript",
    "typescript",
    "react",
    "react hook",
    "persisted state",
    "use persisted state"
  ],
  "scripts": {
    "clear": "shx rm -rf dist",
    "test": "vitest run --config ../../../vitest.browser.config.ts --root .",
    "test:watch": "vitest --config ../../../vitest.browser.config.ts  --root .",
    "bundle": "tsdown",
    "build": "run-s clear bundle",
    "release": "pnpm publish . --tag latest --access public --no-git-checks"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "@utilityjs/use-is-server-handoff-complete": "workspace:*"
