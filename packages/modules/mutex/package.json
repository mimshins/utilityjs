{
  "name": "@utilityjs/mutex",
  "version": "1.0.0",
  "description": "A Mutex (Mutual Exclusion) class to ensure a task runs exclusively.",
  "license": "MIT",
  "homepage": "https://github.com/mimshins/utilityjs/tree/main/packages/modules/mutex",
  "repository": {
    "type": "git",
    "url": "git@github.com:mimshins/utilityjs.git",
    "directory": "packages/modules/mutex"
  },
  "bugs": {
    "url": "https://github.com/mimshins/utilityjs/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "javascript",
    "typescript",
    "mutex",
    "mutual exclusion",
    "concurrency",
    "async",
    "lock",
    "synchronization"
  ],
  "scripts": {
    "test": "vitest run --config ../../../vitest.node.config.ts --root .",
    "test:watch": "vitest --config ../../../vitest.node.config.ts  --root .",
    "build": "tsdown",
    "release": "pnpm publish . --tag latest --access public --no-git-checks"
  }
}
