{
  "name": "@utilityjs/copy-to-clipboard",
  "version": "2.0.0",
  "description": "An utility module to help with copying text to clipboard.",
  "license": "MIT",
  "homepage": "https://github.com/mimshins/utilityjs/tree/main/packages/modules/copy-to-clipboard",
  "repository": {
    "type": "git",
    "url": "git@github.com:mimshins/utilityjs.git",
    "directory": "packages/modules/copy-to-clipboard"
  },
  "bugs": {
    "url": "https://github.com/mimshins/utilityjs/issues"
  },
  "type": "module",
