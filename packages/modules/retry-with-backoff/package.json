{
  "name": "@utilityjs/retry-with-backoff",
  "version": "1.0.0",
  "description": "Executes an asynchronous function with exponential backoff retry logic, automatically retrying on failure with increasing delays between attempts.",
  "license": "MIT",
  "homepage": "https://github.com/mimshins/utilityjs/tree/main/packages/modules/retry-with-backoff",
  "repository": {
    "type": "git",
    "url": "git@github.com:mimshins/utilityjs.git",
    "directory": "packages/modules/retry-with-backoff"
  },
  "bugs": {
    "url": "https://github.com/mimshins/utilityjs/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "javascript",
    "typescript",
    "retry",
    "backoff",
    "exponential backoff",
    "retry logic",
    "resilience"
  ],
  "scripts": {
    "test": "vitest run --config ../../../vitest.node.config.ts --root .",
    "test:watch": "vitest --config ../../../vitest.node.config.ts  --root .",
    "build": "tsdown",
    "release": "pnpm publish . --tag latest --access public --no-git-checks"
  }
}
